.nav-container
  ul
    margin: 0
    padding: 0
    list-style-type: none
    float: right
    font-weight: bold
    li
      display: inline
      a
        text-transform: uppercase
        font-size: 12px
        line-height: 20px
        font-weight: 800
        letter-spacing: 1px
        text-decoration: none
        color: #F5F5F5
        padding: 15px 10px
        &:hover
          background-color: hsla(0, 0%, 74%, 0.5)
          color: #FAFAFA

  @media screen and (max-width: 768px)
    display: none
    margin-right: -15px
    
    ul
      background-color: hsla(0, 0%, 74%, 0.2)
      li
        display: block