@import "variables.styl"
@import "functions.styl"

.sidebar-container
  width: left-side-width
  font-size: 1.4rem
  padding: 1rem 1rem

  min-height: 30vh

  order: -1

  &.right
    width: right-side-width
    border-right: none
  
    order: 1
  
  @media all and (max-width: 768px)
    width: 100%
    padding: 1rem 2rem
    &.right
      width: 100%
      padding: 1rem 2rem
