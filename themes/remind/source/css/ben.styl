@import "variables.styl"
@import "archive.styl"
@import "heading.styl"

html
  font-size: 62.5%
  font-weight: 400

body 
  font-family: font-family
  color: #404040
  background-color: color-bg
  overflow-x: hidden

h1
  font-size: 2em
  margin: .67em 0
h2
  font-size: 1.5em 
  margin: .75em 0
h3
  font-size: 1.17em 
  margin: .83em 0 
h5
  font-size: .83em 
  margin: 1.5em 0 
h6
  font-size: .75em
  margin: 1.67em 0
h1, h2, h3, h4, h5, h6
  font-weight: 400
  font-family: font-family

ul, ol
  margin: 0
  padding: 0
  list-style-type: none

a
  color: color-primary
  &:visited
    color: color-primary 
  &:hover
    color: color-primary-dark

nav
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 999
  background-color: color-primary-dark
  height: nav-height
  line-height: nav-height
  vertical-align: middle

  & > i.remind 
    display: none
  a
    text-decoration: none !important
    color: white
    &:hover
      color: gray600
    &:visited
      color: white
    &.title 
      font-size: 2.5rem
      font-weight: 600
      padding: 0 1.5em
      
  ul
    float: right
    &:after 
      content: ""
      display: table
      clear: both
    li
      display: inline-block
      a
        display: inline-block
        text-transform: uppercase
        font-size: 1.2rem
        line-height: 2em
        font-weight: 600
        letter-spacing: 1px
        padding: 1em 1.2em

@media all and (max-width: 768px)
  nav
    font-size: 3rem
    padding: 0 0.5em
    text-align: center
    & > i.remind
      display: inline-block
      position: absolute
      left: 0.5em
      font-size: 1em
      line-height: nav-height
      width: 1em
      height: 1em
      color: white
      background-color: transparent
    a.title
      text-align: center 
    ul 
      display: none
      &.visible
        display: block
        display: inline-block
        position: absolute
        top: nav-height
        left: 0.5em
        color: color-primary
        background-color: white
        box-shadow: 0 1px 5px gray100
        li
          display: block
          line-height: 1em
          text-align: left
        a
          line-height: 1.5
          color: color-primary
          &:hover
            color: color-primary
          &:visited
            color: color-primary

.post-preview
  a
    text-decoration: none
    h2.post-title
      font-size: 2.1rem
      line-height: 1.3
      margin-top: 3rem
      margin-bottom: 0.8rem
      color: color-primary-dark
    h3.post-subtitle 
      font-size: 1.5rem
      font-weight: font-weight-content 
      line-height: 1.3
      margin: 0
      margin-bottom: 1rem
      color: color-primary-dark
    &.hover
      h2.post-title
      h3.post-subtitle
        color: color-primary-light
    .post-content-preview
      font-size: 1.3rem
      font-weight: font-weight-content 
      font-style: italic
      color: color-font-secondary
  .post-meta
    font-size: 1.2rem
    font-weight: font-weight-content

.tags 
  a
    font-size: 1.2rem
    text-decoration: none
    border-radius: 1em
    color: color-font-primary
    border: 1px solid pink200
    padding: 0.2em 0.5em
    background-color: pink200
    &:hover
      background-color: pink100
      border-color: pink100
      background-color: pink100

