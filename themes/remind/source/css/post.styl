@import "variables.styl"
@import "functions.styl"

.post-container
  width: main-width
  padding: 0 2em

  & > header 
    margin-top: nav-height + 5em

  article
    border-top: 1px solid gray200
    font-size: 1.3rem
    line-height: 1.5
    strong 
      font-weight: 500
    a
      color: color-font-primary
      background-color: gray200
      padding: 0 0.5em
      text-decoration: none
      &:hover
        color: color-primary
        background-color: gray200
        text-decoration: underline
    img
      max-width: 100%
      padding: 1em 0
      box-shadow: 0 0 4px gray500

  section.meta 
    color: color-primary-dark
    font-size: 1.5rem
    line-height: 2
    margin-top: 2em

  ul.pager
    font-size: 1.4rem
    margin: 2em 0
    padding: 0
    font-weight: 400
    letter-spacing: 1
    line-height: 2
    display: flex
    justify-content: space-between
    li
      display: inline
      list-style-type: none
      border: 1px solid gray200
      padding: 1em 2em
      cursor: pointer
      a
        text-decoration: none
      &:hover
        background-color: gray200
        border-color: gray300

  

    